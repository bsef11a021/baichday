    <head>
        <meta charset="UTF-8" />
        <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
        <title>Login and Registration Form with HTML5 and CSS3</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <meta name="description" content="WELCOME TO FREIND ZONE" />
        <meta name="keywords" content="html5, css3, form, switch, animation, :target, pseudo-class" />
        <meta name="author" content="Codrops" />
        <link rel="shortcut icon" href="../favicon.ico"> 
        <link rel="stylesheet" type="text/css" href="~/content/demo.css" />
        <link rel="stylesheet" type="text/css" href="~/content/style.css" />
		<link rel="stylesheet" type="text/css" href="~/content/animate-custom.css" />
        
        <script src="~/Scripts/jquery-1.7.1.js"></script>
    </head>
    <body>
        <div class="container">
           
            <header>
                <h1><strong>Welcome To BaichDay.com</strong></h1>
                <h2> Login and Registration Form</h2>
				
            </header>
            <section>				
                <div id="container_demo" >
                    <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                    <a class="hiddenanchor" id="toregister"></a>
                    <a class="hiddenanchor" id="tologin"></a>
                    <div id="wrapper">
                        <div id="login" class="animate form">
                            <form  action="/Home/signin" autocomplete="on" method="post"> 
                                <h1>Log in</h1> 
                                <p> 
                                    <label for="username" class="uname" data-icon="u" > Username </label>
                                    <input id="username" name="username" required="required" type="text" placeholder="Enter User Name"/>
                                </p>
                                <p> 
                                    <label for="password" class="youpasswd" data-icon="p"> Password </label>
                                    <input id="password" name="password" required="required" type="password" placeholder="Enter Password" /> 
                                </p>
                                <p class="keeplogin"> 
									<input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" /> 
									<label for="loginkeeping">Keep me logged in</label>
								</p>
                                <p class="login button"> 
                                    <input type="submit" value="Login" /> 
								</p>
                                <p class="change_link">
									
									<a href="#toregister" class="to_register">Sign-up</a>
								</p>
                            </form>
                        </div>

                        <div id="register" class="animate form">

                   
                                               
                            <form  action="/Home/signup" autocomplete="on" method="post"> 
                                <h1> Sign up </h1> 


                                <p> 
                                    <label for="usernamesignup" class="uname" data-icon="u">Name</label>
                                    <input id="userfullname" name="userfullname" required="required" type="text" placeholder="Enter Full Name" />
                                </p>

                                <p> 
                                    <label for="usernamesignup" class="uname" data-icon="u">Username</label>
                                    <input id="username_name" name="username_name" required="required" type="text" placeholder="Enter User Name" />
                                </p>

                             
                                 <p> 
                                    <label for="usernamesignup" class="uname" >Check avalibility</label>
                                    <button id="username_check" name="username_check" onclick="f1()"> Click Me </button>
                                </p>
                                

                                <p> 
                                    <label for="passwordsignup" class="youpasswd" data-icon="p">Password </label>
                                    <input id="userpassword" name="userpassword" required="required" type="password" placeholder="Enter your Password"/>
                                </p>
                                <p> 
                                    <label for="passwordsignup_confirm" class="youpasswd" data-icon="p">Re-enter Password</label>
                                    <input id="passwordsignup_confirm" name="passwordsignup_confirm" required="required" type="password" placeholder="Enter your Password Again"/>
                                </p>

                               
                                <p> 
                                    <label for="email" class="yourmail" data-icon="u">Email ID </label>
                                    <input id="email" name="userdob" required="required" type="date" placeholder="Enter Email Address" />
                                </p>

    
                                <p class="signin button"> 
									<input type="submit" value="Sign up" class="submit"/> 
								</p>

                                <p class="change_link">  
									Already a member ?
									<a href="#tologin" class="to_register"> Go and log in </a>
								</p>
                            </form>
                        </div>
						
                    </div>
                </div>  
            </section>
        </div>
        
        <script>
            function f1() {
                $.getJSON("/Home/checkUserName?u=" + $('#Name').val(), function (x)
                {
                    
                    if (x) {
                        alert("Availiable");
                    }
                    else {
                        alert("Not availiable");
                    }
                });
            }
         </script>
    </body>
</html>